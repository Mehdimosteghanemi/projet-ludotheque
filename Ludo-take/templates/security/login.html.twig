{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="connection__form">
        <form class="connection__form" method="post">

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecter {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecté</a>
                </div>
            {% endif %}


            <h1 class="h3 mb-3 font-weight-normal connection__form__title">Connexion</h1>

            {% if error %}
                <div class="alert alert-danger connection__form__error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="connection__form__row input-text__row">
                <input class="connection__form__row__input  input-text__row__input" type="email" value="{{ last_username }}" name="email" id="inputEmail"  class="form-control" autocomplete="email" required autofocus>
                <label class="connection__form__row__label  input-text__row__label" for="inputEmail">E-mail</label>
            </div>
            <div class="connection__form__row input-text__row">
                <input class="connection__form__row__input input-text__row__input" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <label class="connection__form__row__label input-text__row__label" for="inputPassword">Mot de passe</label>
            </div>


            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
                
            <button class="button" type="submit">
                Se connecter
            </button>

                {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html #}

                <div class="connection__form__remember-me checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me">Se souvenir de moi
                    </label>
                </div>
           


            <button class="boutton" type="submit">
                Se connecter

            </button>

            <div class="connection__form__nav">
                <a class="button button__return connection__form__nav__link" href="{{ path('home_index') }}">retour à l'accueil</a>
                <a class="button button__secondary connection__form__nav__link" href="{{ path('register') }}">m'inscrire</a>
            </div>
        </form>
        
        
    </div>
</section>
{% endblock %}