{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %} 
<div class="container container__registration">
<header>S'inscrire à Ludo'thèque !</header>
        <div class="progress-bar">
            <div class="step">
               <p>
                  Etape 1
               </p>
               <div class="bullet">
                  <span>1</span>
               </div>
                <div class="check fas fa-check"></div>
            </div>
            <div class="step">
               <p>
                  Etape 2
               </p>
               <div class="bullet">
                  <span>2</span>
               </div>
               <div class="check fas fa-check"></div>
            </div>
        </div>

    <div class="form-outer">
    {{ form_start(userForm) }}

        <div class="page slide-page">
        
            <div class="title">
            Première étape, (la plus facile):
            </div>

            <div class="field">
            {{ form_row(userForm.firstname, {
                attr:{  placeholder:'Prénom'},
                label: ' '
            }) }}
            </div>

            <div class="field">
            {{ form_row(userForm.lastname, {
                attr:{placeholder:'Nom'},
                label: ' '
            }) }}
            </div>

            <div class="field" id="signMail">
            {{ form_row(userForm.email, {
                attr:{placeholder:'Adresse Mail',
                        value: app.request.query.get("email")},
                label: ' '
            }) }}
            </div>

            <div class="field" id="signPassword">
            {{ form_row(userForm.plainPassword, {
                attr:{placeholder:'Mot de passe'},
                label: ' ',
                minlength:'4'
                }) }}
            </div>
            <div class="field">
                <button class="firstNext next--register">Next</button>
            </div>
        </div>


    <div class="page">
        <div class="title">
                     Information de livraison (c'est celle-ci la plus facile):
        </div>

        <div class="field">
        {{ form_row(userForm.address_road, {
            attr:{placeholder:'Rue'},
            label: ' '
        }) }}
        </div>

        <div class="field">
        {{ form_row(userForm.address_number, {
            attr:{placeholder:'Numéro de rue'},
            label: ' '
        }) }}
        </div>

        <div class="field">
        {{ form_row(userForm.address_zip_code, {
            attr:{placeholder:'Code postal'},
            label: ' '
        }) }}
        </div>

        <div class="field">
        {{ form_row(userForm.address_city, {
            attr:{placeholder:'Ville'},
            label: ' '
        }) }}
        </div>

        <div class="field btns">
            <button class="prev-1 prev">Précedent</button>
            {{ form_end(userForm) }}
        </div>
    </div>
</div>
</div>
      {% block javascript %}
        <script src="{{ asset('app/app.js') }}"></script>
      {% endblock %}
{% endblock %}
