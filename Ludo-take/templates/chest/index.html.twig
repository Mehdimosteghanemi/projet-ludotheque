{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Coffre{% endblock %}

{% block body %}
<main class="chest">
    <section class="chest__section__title first__section">
        <h1>Bienvenue dans ton coffre</h1>
        <p>C'est ici que tu peux voir les jeux en ta possession tu peux choisir de nous les retourn√©</p>
    </section>

    <section class="chest__section">
        <table class="table table--principal">
            <thead class="table__title">
                <tr>
                    <th colspan="4">Ton coffre</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table__head">
                    <td class="table__head__col">nom</td>
                    <td class="table__head__col">date de location</td>
                    <td class="table__head__col">status</td>
                    <td class="table__head__col">option</td>
                </tr>
                <tr class="table__row table__row--odd">
                    <td class="table__row__col">jeux</td>
                    <td class="table__row__col">20/09/2021</td>
                    <td class="table__row__col">chez vous</td>
                    <td class="table__row__col">bouton</td>
                </tr>
                <tr class="table__row table__row--pair">
                    <td class="table__row__col">jeux</td>
                    <td class="table__row__col">20/09/2021</td>
                    <td class="table__row__col">chez vous</td>
                    <td class="table__row__col">bouton</td>
                </tr>
                <tr class="table__row table__row--odd">
                    <td class="table__row__col">jeux</td>
                    <td class="table__row__col">20/09/2021</td>
                    <td class="table__row__col">chez vous</td>
                    <td class="table__row__col">bouton</td>
                </tr>
                <tr class="table__row table__row--pair">
                    <td class="table__row__col">jeux</td>
                    <td class="table__row__col">20/09/2021</td>
                    <td class="table__row__col">chez vous</td>
                    <td class="table__row__col">bouton</td>
                </tr>
                <tr class="table__row table__row--odd">
                    <td class="table__row__col">jeux</td>
                    <td class="table__row__col">20/09/2021</td>
                    <td class="table__row__col">chez vous</td>
                    <td class="table__row__col">bouton</td>
                </tr>
            </tbody>
        </table>
    </section>
    <section class="chest__section">
        <div>
            <table class="table">
                <thead class="table__title">
                    <tr>
                        <th colspan="2">En attente de retour</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="table__head">
                        <td class="table__head__col">nom</td>
                        <td class="table__head__col">option</td>
                    </tr>
                    <tr class="table__row table__row--odd">
                        <td class="table__row__col">Jeux</td>
                        <td class="table__row__col">bouton</td>
                    </tr>
                    <tr class="table__row table__row--pair">
                        <td class="table__row__col">Jeux</td>
                        <td class="table__row__col">bouton</td>
                    </tr>
                    <tr class="table__row table__row--odd">
                        <td class="table__row__col">Jeux</td>
                        <td class="table__row__col">bouton</td>
                    </tr>
                </tbody>
            </table>
            <a href="" class="button button__chest">Imprimer le bon de retour</a>
        </div>

        <div class="chest__section__table_info">
            <table class="table">
                <thead class="table__title">
                    <tr>
                        <th colspan="3">Liste de commande</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="table__head">
                        <td class="table__head__col">prochain envoie</td>
                        <td class="table__head__col">plus tard</td>
                        <td class="table__head__col table__head__col--border-off">prochaine commande</td>
                    </tr>
                    {% for order in user.orders %}
                        <tr class="table__row table__row--odd">
                            <td class="table__row__col"><a class="button--1" href="#">{{order.games.name}}</a></td>
                            <td class="table__row__col"></td>
                            <td class="table__head__col table__head__col--border-off">date</td>
                        </tr>
                    {% endfor %}
                    {# {{ dump([0].games.name)}} #}
                    
                    <tr class="table__row table__row--pair">
                        <td class="table__row__col">Jeux</td>
                        <td class="table__row__col"></td>
                        <td class="table__head__col table__head__col--border-off">nombre de jeux</td>
                    </tr>
                    <tr class="table__row table__row--odd">
                        <td class="table__row__col"></td>
                        <td class="table__row__col">Jeux</td>
                        <td class="table__head__col table__head__col--border-off">nombre / nombre</td>
                    </tr>
                </tbody>   
            </table>
            <a href="" class="button button__chest">Commander plus de jeux</a>
  
        </div>
    </section>
    
    <section class="chest__section">
        <table class="table">
            <thead class="table__title">
                <tr>
                    <th colspan="3">Les retours</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table__head">
                    <td class="table__head__col">nom</td>
                    <td class="table__head__col">date de retour</td>
                    <td class="table__head__col">status</td>
                </tr>
                <tr class="table__row table__row--odd">
                    <td class="table__row__col">Jeux</td>
                    <td class="table__row__col">28/09/2021</td>
